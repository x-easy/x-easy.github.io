    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --apple-blue: #007aff;
            --shazam-gradient: linear-gradient(135deg, #005cf7 0%, #00d2ff 100%);
            --glass: rgba(255, 255, 255, 0.1);
            --glass-border: rgba(255, 255, 255, 0.2);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
        body {
            background-color: #000;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            color: white;
            height: 100vh;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* --- 動態光暈背景 --- */
        .bg-glow {
            position: fixed;
            top: -50%; left: -50%; width: 200%; height: 200%;
            background: radial-gradient(circle at center, #1a4da1 0%, #000 70%);
            z-index: -1;
            animation: rotateGlow 20s linear infinite;
        }
        @keyframes rotateGlow {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* --- 主播放器容器 (iPhone 尺寸感覺) --- */
        .player-container {
            width: 100%;
            max-width: 430px; /* iPhone 15 Pro Max 寬度 */
            height: 100vh;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(50px);
            display: flex;
            flex-direction: column;
            padding: 20px 30px 60px;
            position: relative;
        }

        /* --- 頂部下拉把手 --- */
        .drag-handle {
            width: 40px; height: 5px;
            background: rgba(255,255,255,0.3);
            border-radius: 10px;
            margin: 0 auto 30px;
        }

        /* --- 專輯封面區域 --- */
        .album-art-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px 0;
        }
        .album-art {
            width: 100%;
            aspect-ratio: 1/1;
            border-radius: 12px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
            transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            background: url('https://images.unsplash.com/photo-1614613535308-eb5fbd3d2c17?q=80&w=1000&auto=format&fit=crop') center/cover;
        }
        .player-container.playing .album-art { transform: scale(1.05); }

        /* --- 曲目資訊 --- */
        .track-info { margin-bottom: 30px; }
        .track-info h1 { font-size: 24px; font-weight: 700; margin-bottom: 5px; letter-spacing: -0.5px; }
        .track-info p { font-size: 18px; color: var(--apple-blue); font-weight: 500; }

        /* --- 進度條 --- */
        .progress-area { margin-bottom: 40px; }
        .slider {
            -webkit-appearance: none;
            width: 100%; height: 4px;
            background: rgba(255,255,255,0.2);
            border-radius: 2px;
            outline: none;
        }
        .slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 6px; height: 6px;
            background: white; border-radius: 50%;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
            cursor: pointer; transform: scale(2);
        }
        .time-box {
            display: flex; justify-content: space-between;
            font-size: 12px; color: rgba(255,255,255,0.5); margin-top: 10px;
            font-variant-numeric: tabular-nums;
        }

        /* --- 控制按鈕 --- */
        .controls {
            display: flex; justify-content: space-between; align-items: center;
