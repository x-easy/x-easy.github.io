<body>

    <div class="bg-glow" id="bgGlow"></div>

    <div class="player-container" id="player">
        <div class="drag-handle"></div>

        <div class="album-art-section">
            <div class="album-art" id="cover"></div>
        </div>

        <div class="track-info">
            <h1 id="title">Midnight City</h1>
            <p id="artist">M83</p>
        </div>

        <div class="progress-area">
            <input type="range" class="slider" value="35" min="0" max="100">
            <div class="time-box">
                <span>1:24</span>
                <span>4:03</span>
            </div>
        </div>

        <div class="controls">
            <button class="btn-icon"><i class="fa-solid fa-shuffle"></i></button>
            <button class="btn-icon"><i class="fa-solid fa-backward-step"></i></button>
            <button class="btn-icon play-btn" id="playToggle">
                <i class="fa-solid fa-play" id="playIcon"></i>
            </button>
            <button class="btn-icon"><i class="fa-solid fa-forward-step"></i></button>
            <button class="btn-icon"><i class="fa-solid fa-repeat"></i></button>
        </div>

        <div class="bottom-toolbar">
            <div class="tool-item" onclick="toggleLyrics()"><i class="fa-solid fa-quote-right"></i></div>
            <div class="tool-item"><i class="fa-solid fa-airplay"></i></div>
            <div class="tool-item"><i class="fa-solid fa-list-ul"></i></div>
            <div class="tool-item"><i class="fa-solid fa-ellipsis"></i></div>
        </div>

        <div class="lyrics-overlay" id="lyricsOverlay" onclick="toggleLyrics()">
            <div class="drag-handle" style="margin-bottom: 50px;"></div>
            <div style="font-size: 28px; font-weight: 700; line-height: 1.4; color: #fff;">
                <p style="opacity: 0.3;">Waiting for a star to fall</p>
                <p style="opacity: 1; margin: 20px 0; color: var(--apple-blue);">And carry you that far into the night</p>
                <p style="opacity: 0.3;">Finally it's holding on</p>
                <p style="opacity: 0.3;">To the magic in your eyes</p>
            </div>
        </div>
    </div>

    <script>
        const player = document.getElementById('player');
        const playToggle = document.getElementById('playToggle');
        const playIcon = document.getElementById('playIcon');
        const lyricsOverlay = document.getElementById('lyricsOverlay');
        const bgGlow = document.getElementById('bgGlow');
        
        let isPlaying = false;

        // 播放暫停切換
        playToggle.addEventListener('click', () => {
            isPlaying = !isPlaying;
            if(isPlaying) {
                player.classList.add('playing');
                playIcon.classList.replace('fa-play', 'fa-pause');
                bgGlow.style.animationDuration = '10s'; // 播放時背景動快一點
            } else {
                player.classList.remove('playing');
                playIcon.classList.replace('fa-pause', 'fa-play');
                bgGlow.style.animationDuration = '20s';
            }
        });

        // 歌詞切換
        function toggleLyrics() {
            lyricsOverlay.classList.toggle('show');
        }

        // 簡單的背景色隨機變換（模擬封面取色）
        const colors = ['#1a4da1', '#6b1a1a', '#1a6b41', '#4b1a6b'];
        let colorIdx = 0;
        setInterval(() => {
            if(isPlaying) {
                colorIdx = (colorIdx + 1) % colors.length;
                bgGlow.style.background = `radial-gradient(circle at center, ${colors[colorIdx]} 0%, #000 70%)`;
            }
        }, 5000);
    </script>
</body>
</html>
